<p id="notice"><%= notice %></p>

<h1><br></h1>

 <div class="jumbotron jumbotron-fluid">

  <div class="container">
   <h1 class="display-4">Listado de Alquileres</h1>
                <div class="row">
            <div class="col">
          <table class="table table-striped">
  <thead>
    <tr>
      <th>Id estacionamiento</th>
      <th>Id usuario</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Id servicio adicional</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.parking_id %></td>
        <td><%= rent.id_usuario %></td>
        <td><%= rent.fecha_inicio %></td>
        <td><%= rent.fecha_fin %></td>
        <td><%= rent.id_servicio_adicional %></td>
        <td><%= rent.observaciones %></td>
        <td><%= link_to 'Mostrar', rent, class: "btn btn-warning" %></td>
        <td><%= link_to 'Editar', edit_rent_path(rent), class: "btn btn-warning"  %></td>
        <td><%= link_to 'Eliminar', rent, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo', new_rent_path, class: "btn btn-info" %>
