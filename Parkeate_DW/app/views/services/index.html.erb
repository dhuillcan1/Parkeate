<p id="notice"><%= notice %></p>

<h1><br></h1>
<div class="jumbotron jumbotron-fluid">

  <div class="container">
   <h1 class="display-4">Listado de Servicios</h1>
                <div class="row">
            <div class="col">
          <table class="table table-striped">
  <thead>
    <tr>
      <th>Id estacionamiento</th>
      <th>Tipo servicio</th>
      <th>Descripcion</th>
      <th>Tarifa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.parking_id %></td>
        <td><%= service.tipo_servicio %></td>
        <td><%= service.descripcion %></td>
        <td><%= service.tarifa %></td>
        <td><%= link_to 'Mostrar', service, class: "btn btn-warning" %></td>
        <td><%= link_to 'Editar', edit_service_path(service), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', service, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo servicio', new_service_path, class: "btn btn-info" %>
