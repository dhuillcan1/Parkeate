
<div class="jumbotron jumbotron-fluid">

  <div class="container">
   <h1 class="display-4">Registrar Servicio</h1>
                <div class="row">
            <div class="col-md-6 col-md-offset-3">

<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form class="form-inline" >
            <div class="form-group">
            <div class="col">  
            <div class="field">
  <div class="field">
    <%= form.label :parking_id %>
    <%= form.number_field :parking_id, id: :service_parking_id, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :tipo_servicio %>
    <!-- <%= form.number_field :tipo_servicio, id: :service_tipo_servicio, class: 'form-control' %> -->
    <%= form.collection_select :tipo_servicio, Servicetype.all, :id, :descripcion, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, id: :service_descripcion, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :tarifa %>
    <%= form.text_field :tarifa, id: :service_tarifa, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Crear nuevo", class: "btn btn-info" %>
  </div>
<% end %>
