

<div class="jumbotron jumbotron-fluid">

  <div class="container">
   <h1 class="display-4">Registrar estacionamiento</h1>
                <div class="row">
            <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: parking, local: true) do |form| %>
            <% if parking.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(parking.errors.count, "error") %> A corregir:</h2>

                <ul>
                <% parking.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
          
          <form class="form-inline" >
            <div class="form-group">
            <div class="col">  
            <div class="field">
              
              <%= form.label :id_usuario %>
              <%= form.number_field :id_usuario, id: :parking_id_usuario, class: 'form-control' %>
              </div>
            </div>
            
           <div class="field">
              <%= form.label :id_ubicacion %>
              <%= form.number_field :id_ubicacion, id: :parking_id_ubicacion, class: 'form-control' %>
            </div>
            </div>

            <div class="field">
              <%= form.label :id_imagen %>
              <%= form.number_field :id_imagen, id: :parking_id_imagen, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :nombre %>
              <%= form.text_field :nombre, id: :parking_nombre, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :direccion %>
              <%= form.text_field :direccion, id: :parking_direccion, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :precio %>
              <%= form.text_field :precio, id: :parking_precio, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :telefono %>
              <%= form.number_field :telefono, id: :parking_telefono, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :id_tipo %>
              <%= form.number_field :id_tipo, id: :parking_id_tipo, class: 'form-control' %>
            </div>

            <div class="actions">
              <%= form.submit "Crear nuevo estacionamiento", class: "btn btn-info" %>
            </div>
              </div>
          </div>


<% end %>
